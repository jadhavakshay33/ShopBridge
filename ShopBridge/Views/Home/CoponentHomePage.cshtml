@model IEnumerable<ShopBridge.Models.component>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style>
    body {
        margin: 4rem 0;
    }

    h4 {
        margin-bottom: 2rem;
        margin-top: 3rem;
    }

    img {
        border: 0;
        width: 100px;
    }

    .panel {
        height: auto;
        width: auto;
        border-radius: 0.2rem;
        padding: 0.5rem;
        margin-bottom: 1rem;
    }

        .panel.panel-purple {
            border: 2px solid #7f51f4;
            background-color: #dfccff;
            text-align: center;
        }

    #myImg {
        border-radius: 5px;
        cursor: pointer;
        transition: 0.3s;
    }

        #myImg:hover {
            opacity: 0.7;
        }


    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        padding-top: 100px;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgb(0,0,0);
        background-color: rgba(0,0,0,0.9);
    }


    .modal-content {
        margin: auto;
        display: block;
        width: 80%;
        max-width: 700px;
    }



    .modal-content, #caption {
        animation-name: zoom;
        animation-duration: 0.6s;
    }

    @@keyframes zoom {
        from {
            transform: scale(0)
        }

        to {
            transform: scale(1)
        }
    }


    .close {
        position: absolute;
        top: 15px;
        right: 35px;
        color: #fcf9f9;
        font-size: 50px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: #bbb;
            text-decoration: none;
            cursor: pointer;
        }


    @@media only screen and (max-width: 700px) {
        .modal-content {
            width: 100%;
        }
    }
</style>

<script type="text/javascript">

    function callpopUp(id) {

        var srcs = document.getElementById(id).src;


        var modal = document.getElementById("myModal");


        var img = document.getElementById(id);
        var modalImg = document.getElementById("img01");
        img.onclick = function () {
            modal.style.display = "block";
            modalImg.src = this.src;
        }

        var span = document.getElementsByClassName("close")[0];

        span.onclick = function () {
            modal.style.display = "none";
        }

    }

</script>

<div class="container">
    <div>
        <p>
            <input type="button" class="btn btn-primary btn-block" value="Create New" onclick="location.href='@Url.Action("AddComponent", "Home")'" />
        </p>
    </div>
    <br />
    <hr />
    <h2>Coponent List</h2>
    <hr />
    <h3>Double click on Image View Full Image</h3>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-push-2">
                <div class="panel panel-purple">
                    <div>
                        <img alt="@item.Name" id="@item.ID" onclick="callpopUp(this.id)"
                             src="data:image/jpg;base64,@Convert.ToBase64String(item.Image)" />
                    </div>
                    <div><b>@Html.DisplayFor(modelItem => item.Name)</b></div>
                    <div><b>Discription:</b>@Html.DisplayFor(modelItem => item.Discription)</div>
                    <div><b>Price:@Html.DisplayFor(modelItem => item.Price)</b></div>
                </div>
            </div>
        }
    </div>

</div>



<div id="myModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="img01">
</div>
